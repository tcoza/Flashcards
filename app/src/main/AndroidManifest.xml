<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:icon="@drawable/flashcards"
        android:roundIcon="@drawable/flashcards"
        android:supportsRtl="true"
        android:theme="@style/Theme.Flashcards"
        tools:targetApi="31">
        <activity
            android:name=".DeckActivity"
            android:exported="false"
            android:label="@string/title_activity_deck"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Flashcards" />
        <activity
            android:name=".CardsActivity"
            android:exported="false"
            android:label="@string/title_activity_cards"
            android:theme="@style/Theme.Flashcards"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".EditCardActivity"
            android:exported="false"
            android:label="@string/title_activity_add_card"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Flashcards" />
        <activity
            android:name=".FlashActivity"
            android:exported="false"
            android:label="@string/title_activity_card"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Flashcards" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Flashcards">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>